<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_repair_tree" model="ir.ui.view">
            <field name="name">view.repair.tree</field>
            <field name="model">repair</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Contacts">
                    <field name="code"/>
                    <field name="date"/>
                    <field name="user_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_repair_form" model="ir.ui.view">
            <field name="name">view.repair.form</field>
            <field name="model">repair</field>
            <field name="arch" type="xml">
                <form string="Contract">
                    <header>
                        <button name="action_finalized" states="edition" string="Finalized" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft, finalized" />
                    </header>
                    <sheet>
                        <group col="6">
                            <field name="code" colspan="2"/>
                            <field name="date" colspan="2" attrs="{'readonly': [('state','=', 'finalized')]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_repair" model="ir.actions.act_window">
            <field name="name">Repair</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">repair</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="filter" eval="True"/>
        </record>
    </data>
</odoo>
