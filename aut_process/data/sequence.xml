<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- reception_sequence -->
        <record id="sequence_reception" model="ir.sequence">
            <field name="name">Reception Sequence</field>
            <field name="code">reception.sequence</field>
            <field name="prefix">REC/%(year)s</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field name="padding">6</field>
        </record>

        <!-- repair_sequence -->
        <record id="sequence_repair" model="ir.sequence">
            <field name="name">Repair Sequence</field>
            <field name="code">repair.sequence</field>
            <field name="prefix">RMA/%(year)s</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field name="padding">6</field>
        </record>

    </data>
</odoo>
